<div class="row">
  <div class="col s12 m9">
    <% if can? :create, Recipe %>
        <%= link_to 'Новый рецепт', new_recipe_path, class: "waves-effect waves-light btn" %>
    <% end %>     
  </div>
</div>    

  <% @recipes.each do |recipe|  %>
  <div class="row">

    <div class="card-image waves-effect waves-block waves-light">
    <%= image_tag(recipe.image,   class: 'activator materialboxed width="650"') %>
    </div>
    <div class="col s12 m8">
     <h3><%=link_to recipe.name, recipe_path(recipe) %></h3></br>
     <%= recipe.short %>
    </div>
  
   </div>
  <% end %>

  <%= paginate @recipes %>