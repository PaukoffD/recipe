<h2 class="header">
  <%= @recipe.name %>
  <div class="card-action left-align">
         
          <% if can? :show, @recipe %>
              <%= link_to(nil, class: "waves-effect waves-light btn-floating", title: "Сделать заказ") do %>
                  <i class='material-icons'>shopping_cart</i>
              <% end %>
          <% end %>
          <% if can? :update, @recipe %>
                <%= link_to(edit_recipe_path(@recipe), class: "waves-effect waves-light btn-floating") do %>
                    <i class='material-icons'>mode_edit</i>
                <% end %>
          <% end %>
          <% if can? :destroy, @recipe %>
                <%= link_to(recipe_path(@recipe), class: "waves-effect waves-light btn-floating",
                            method: :delete, data: {confirm: (t 'recipe.deletion_confirm')}) do %>
                    <i class='medium material-icons'>alarm_on</i>
                <% end %>
          <% end %>

              
  </div>
</h2>

<div class="row">
  <div class="col s12 m6 ">
     
      
        <%= image_tag(@recipe.image.url(:med), :height => 450, :crop => :fit, class: 'activator') %>
  </div>   
 
      <div class="col s12 m4 right">
       
        <%= @recipe.short.to_s.html_safe %>
      
        
      </div>
    </div>    

        
      
  <div class="col s12">
    <%= @recipe.description.to_s.html_safe %>
  </div>


<%= render partial: "comments/template", locals: {commentable: @recipe, new_comment: @comment} %> 
