<% if can? :create, Recipe %>
  <div class="row">
    <div class="col s12 m9">
     
          <%= link_to 'Новый рецепт', new_recipe_path, class: "waves-effect waves-light btn" %>
         
    </div>
  </div>    

  <% @recipes.my.includes(:owner).each do |recipe|  %>
  <div class="row">

    <div class="col s12 m4">
    
     <%= image_tag(recipe.image.url(:med),   :crop => :fit, class: 'activator') %>
    </div>
    <div class="col s12 m8">
     <h3><%=link_to recipe.name, recipe_path(recipe) %></h3></br>
     <%= recipe.short %>
    </div>
  
   </div>
  <% end %>

  <%= paginate @recipes %>
  <% end %>  
